<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors occurred
  <ul>
   <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
   <% end %>
  </ul>
<% end %>

<%= form_with model:@book do |f| %>

 <div class ="form"><h4>Title</h4>
 <%= f.text_field :title %>
 </div>

 <div class ="form"><h4>Body</h4>
 <%= f.text_area :body %>
 </div>

 <div class ="form">
 <%= f.submit'Update Book' %>
 </div>

 <%= link_to"Show",book_path(@book.id) %>
 |
 <a href='/books'>Back</a>

<% end %>